# WhatsApp Personal Assistant Configuration Template
# Copy this file to .env and update the values

# Application Environment
NODE_ENV=development
PORT=3000

# Database Configuration
# Options: sqlite, postgresql
DB_TYPE=sqlite

# SQLite Configuration (for development)
DB_PATH=./data/whatsapp.db

# PostgreSQL Configuration (for production)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=whatsapp_assistant
# DB_USER=assistant_user
# DB_PASSWORD=your_secure_password_here

# WhatsApp Configuration
WHATSAPP_SESSION_NAME=default
WHATSAPP_HEADLESS=true
WHATSAPP_DISABLE_SPINS=true

# API Security
API_KEY=your_api_key_here_change_this
JWT_SECRET=your_jwt_secret_here_change_this

# Auto-Response Settings
DEFAULT_AUTO_RESPONSE_DELAY=300
MAX_AUTO_RESPONSE_DELAY=3600
DEFAULT_AUTO_RESPONSE_MESSAGE=Gracias por tu mensaje. Te responder√© pronto.

# Security Settings
BLOCK_GROUP_AUTO_RESPONSES=true
ALLOW_GROUP_PROCESSING=false

# Notification Settings
URGENT_NOTIFICATIONS_ENABLED=true
NOTIFICATION_WEBHOOK_URL=

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_ENABLED=true
LOG_CONSOLE_ENABLED=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Settings
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# Health Check
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PATH=/health

# Session Storage
SESSION_PATH=./sessions
DATA_PATH=./data
LOGS_PATH=./logs