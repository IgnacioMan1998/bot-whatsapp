# Production Environment Configuration
NODE_ENV=production
PORT=3000

# Database Configuration - PostgreSQL for production
DB_TYPE=postgresql
DB_HOST=localhost
DB_PORT=5432
DB_NAME=whatsapp_assistant
DB_USER=assistant_user
DB_PASSWORD=CHANGE_THIS_SECURE_PASSWORD

# WhatsApp Configuration
WHATSAPP_SESSION_NAME=production
WHATSAPP_HEADLESS=true
WHATSAPP_DISABLE_SPINS=true

# API Security - CHANGE THESE VALUES
API_KEY=CHANGE_THIS_API_KEY_TO_SECURE_VALUE
JWT_SECRET=CHANGE_THIS_JWT_SECRET_TO_SECURE_VALUE

# Auto-Response Settings
DEFAULT_AUTO_RESPONSE_DELAY=300
MAX_AUTO_RESPONSE_DELAY=3600
DEFAULT_AUTO_RESPONSE_MESSAGE=Gracias por tu mensaje. Te responderé pronto.

# Media-Specific Auto-Response Messages
AUDIO_RESPONSE_MESSAGE=Recibí tu audio. En unos minutos te respondo.
VIDEO_RESPONSE_MESSAGE=Recibí tu video. En unos minutos te respondo.
DOCUMENT_RESPONSE_MESSAGE=Recibí tu documento. En unos minutos te respondo.
IMAGE_RESPONSE_MESSAGE=Vi tu imagen. Te respondo en un momento.
STICKER_RESPONSE_MESSAGE=Gracias por el sticker! Te respondo pronto.
LOCATION_RESPONSE_MESSAGE=Recibí tu ubicación. Te contacto pronto.

# Security Settings - CRITICAL: Never respond to groups
BLOCK_GROUP_AUTO_RESPONSES=true
ALLOW_GROUP_PROCESSING=false

# Notification Settings
URGENT_NOTIFICATIONS_ENABLED=true
NOTIFICATION_WEBHOOK_URL=

# Logging Configuration
LOG_LEVEL=warn
LOG_FILE_ENABLED=true
LOG_CONSOLE_ENABLED=false

# Rate Limiting - More restrictive for production
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=50

# CORS Settings - Restrict to your domain
CORS_ORIGIN=https://yourdomain.com
CORS_CREDENTIALS=true

# Health Check
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PATH=/health

# Session Storage
SESSION_PATH=/opt/whatsapp-assistant/sessions
DATA_PATH=/opt/whatsapp-assistant/data
LOGS_PATH=/opt/whatsapp-assistant/logs