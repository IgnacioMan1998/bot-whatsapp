# Development Environment Configuration
NODE_ENV=development
PORT=3000

# Database Configuration - SQLite for development
DB_TYPE=sqlite
DB_PATH=./data/whatsapp.db

# WhatsApp Configuration
WHATSAPP_SESSION_NAME=development
WHATSAPP_HEADLESS=false
WHATSAPP_DISABLE_SPINS=false

# API Security - Development keys (not secure)
API_KEY=dev_api_key_not_secure
JWT_SECRET=dev_jwt_secret_not_secure

# Auto-Response Settings
DEFAULT_AUTO_RESPONSE_DELAY=60
MAX_AUTO_RESPONSE_DELAY=300
DEFAULT_AUTO_RESPONSE_MESSAGE=Mensaje de prueba - desarrollo

# Security Settings
BLOCK_GROUP_AUTO_RESPONSES=true
ALLOW_GROUP_PROCESSING=false

# Notification Settings
URGENT_NOTIFICATIONS_ENABLED=true
NOTIFICATION_WEBHOOK_URL=

# Logging Configuration
LOG_LEVEL=debug
LOG_FILE_ENABLED=true
LOG_CONSOLE_ENABLED=true

# Rate Limiting - More permissive for development
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# CORS Settings - Allow all origins for development
CORS_ORIGIN=*
CORS_CREDENTIALS=true

# Health Check
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PATH=/health

# Session Storage
SESSION_PATH=./sessions
DATA_PATH=./data
LOGS_PATH=./logs